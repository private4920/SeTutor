# Firebase Configuration (Client-side)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (Server-side JWT verification)
# Generate from Firebase Console > Project Settings > Service Accounts > Generate new private key
# Store the entire JSON content as a single-line string
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your_project_id",...}

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/setutor
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=setutor
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_SSL=false

# S3 Storage Configuration
S3_ENDPOINT=https://your-s3-endpoint.com
S3_REGION=us-east-1
S3_BUCKET_NAME=setutor-documents
S3_ACCESS_KEY_ID=your_access_key_id
S3_SECRET_ACCESS_KEY=your_secret_access_key

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
